<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:id="@+id/pic"
            android:clickable="true"
            android:transitionName="albumArt" />

        <RelativeLayout
            android:background="#31576b"
            android:layout_below="@id/pic"
            android:layout_alignParentStart="true"
            android:id="@+id/title_panel"
            android:paddingStart="40dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/album_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_title"
                android:layout_alignStart="@id/album_title"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Artistt"
                android:id="@+id/artist" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_btn_speak_now"
            android:src="@android:drawable/ic_delete"
            android:id="@+id/fab"
            android:transitionName="fab"
            android:layout_above="@+id/title_panel"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-30dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="fab"/>

        <LinearLayout
            android:id="@+id/track_panel"
            android:layout_below="@id/title_panel"
            android:background="#eeeeee"
            android:padding="10dp"
            android:minHeight="80dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_marginStart="20dp"
                android:id="@+id/volume"
                android:contentDescription="Sound"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Title"
                android:id="@+id/track_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceInverse"
                android:layout_marginEnd="20dp"
                android:text="Time"
                android:id="@+id/length" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
